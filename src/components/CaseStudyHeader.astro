---
import { Image } from "astro:assets";
import headerImg from "../assets/images/casestudy-header.png";
import Button from "./button.astro";

const header = [
  {
    title: "Case Name",
    description: "Taxes & Efficiency",
  },
  {
    title: "Category",
    description: "Business",
  },
  {
    title: "Date",
    description: "27th September 2022",
  },
];
---

<section>
  <article>
    <Image src={headerImg} alt="Picture of a laptop, hand holding a phone, and a coffee on a desk." />
    <header data-theme="dark">
      <ul role="list">
        {
          header.map((item) => {
            return (
              <li>
                <h2 class="heading-6">{item.title}</h2>
                <p>{item.description}</p>
              </li>
            );
          })
        }
      </ul>
      <Button label="Live Preview" variant="secondary" url="#" />
    </header>
  </article>
</section>

<style>
  section {
    padding-block-end: 0;

    article {
      display: grid;
      grid-template-columns: minmax(var(--space-xs), 1fr) minmax(0, 64rem) minmax(var(--space-xs), 1fr);
      grid-template-rows: 1fr var(--space-l) auto;

      img {
        border-radius: var(--crn-card);
        grid-column: 1 / -1;
        grid-row: 1 / 3;
      }

      header {
        grid-column: 2;
        grid-row: 2 / 4;
        display: flex;
        flex-wrap: wrap;
        place-items: start;
        justify-content: space-between;
        gap: var(--space-m) var(--space-s);
        border-radius: var(--crn-popup);
        padding: var(--space-l);
        > * {
          font-family: Cabin;
          line-height: 116%; /* 1.16rem */
        }
        h2 {
          font-weight: 500;
        }

        ul {
          max-width: 35rem;
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          gap: var(--space-s) var(--space-l);
        }
      }
    }
  }
</style>
